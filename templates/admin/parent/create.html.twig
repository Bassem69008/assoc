{% extends 'base.html.twig' %}

{% block title %}Création d'un Parent{% endblock %}
{% block title_page %}
    <h2 class="my-auto pl-5">
        <i class="fa fa-user"></i>
        Création d'un Parent
    </h2>
{% endblock %}
{% block body %}

    <div class="container-fluid mt-5 p-5 bg-white ">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info m-0">
                    <h2>Informations</h2>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        {{ form_row(form.gender) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_row(form.family) }}
                    </div>
                </div>
            </div>

        </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
