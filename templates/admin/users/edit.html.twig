{% extends 'base.html.twig' %}

{% block title %}Édition d'un utilisateur{% endblock %}
{% block title_page %}
    <h2 class="my-auto pl-5">
        <i class="fa fa-user"></i>
        Édition d'un utilisateur
    </h2>
{% endblock %}
{% block body %}

    <div class="container m-5 p-5 bg-white ">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.lastName) }}
            </div>
        </div>
        <div class="col-lg-12">
            {{ form_row(form.email) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.roles) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="custom-control custom-switch">
                {{ form_row(form.isVerified) }}
            </div>
        {% endif %}
        {{ form_end(form) }}
    </div>
{% endblock %}
