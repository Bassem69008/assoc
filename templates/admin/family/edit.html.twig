{% extends 'base.html.twig' %}

{% block title %}Édition d'une Famille{% endblock %}
{% block title_page %}
    <h2 class="my-auto pl-5">
        <i class="fa fa-user"></i>
        Édition d'une Famille
    </h2>
{% endblock %}
{% block body %}

    <div class="container m-5 p-5 bg-white ">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.familyName) }}
                {{ form_errors(form.familyName) }}
            </div>
            <div class="col-lg-12">
                {{ form_row(form.address) }}
            </div>
            <div class="col-lg-12">
                {{ form_row(form.city) }}
            </div>
            <div class="col-lg-12">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="col-lg-12">
            {{ form_row(form.email) }}

        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
