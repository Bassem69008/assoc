{% extends 'base.html.twig' %}
{% block title_page %}
    <h2>Détail d'une classe</h2>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 justify-content-center">
                 <div class="card">
                    <div class="card-header">
                        <fieldset>
                            <h2>Informations</h2>
                        </fieldset>
                    </div>
                    <div class="card-body">
                        <div class="col">
                            <h3>Nom: {{ classroom.name }}</h3>
                        </div>
                        <div class="col">
                            Prénom: {{ classroom.startHour|date('H:i') }}
                        </div>
                        <div class="col">
                            Email: {{ classroom.endHour|date('H:i') }}
                        </div>
                        <div class="col">
                            Enseignant: {{ classroom.teacher.lastName }} {{ classroom.teacher.firstName }}
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
