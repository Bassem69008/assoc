{% extends 'base.html.twig' %}
{% block title_page %}
    <h2>Détail Élève</h2>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 justify-content-center">
                 <div class="card">
                    <div class="card-header">
                        <fieldset>
                            <h2>Informations</h2>
                        </fieldset>
                    </div>
                    <div class="card-body">
                        <div class="col">
                            <h3>Nom: {{ student.lastname }}</h3>
                        </div>
                        <div class="col">
                            Prénom: {{ student.firstname }}
                        </div>
                        <div class="col">
                            Date de naissance: {{ student.birthDate|date('d-m-Y') }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
